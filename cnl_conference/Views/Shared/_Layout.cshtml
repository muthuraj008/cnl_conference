<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cnl_conference</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        
    </header>
    <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <img asp-append-version="true" alt="Logo" src="~/css/cropped-Cloud-Loud-Logo.jpg" style="max-width:100%" />
                </div>
                <div class="col-md-10 titlecol">
                    <h2 class="title" style="padding: 3%;padding-left: 200px"; >CloudnLoud Conference</h2>           
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()    
                </div>
            </div>
        </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - cnl_conference - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
