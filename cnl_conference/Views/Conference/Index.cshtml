@using Shared.Models
@model IEnumerable<ConferenceModel>
    
<div class="row">
    <div class="col-md-10 offset-md-2">
        <h3>@ViewBag.title</h3>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Presenter</th>
                <th>Location</th>
                <th>Start of event</th>
                <th>Attendees</th>
                <th>Actions</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Presenter</td>
                    <td>@item.Location</td>
                    <td>@item.Start</td>
                    <td>@item.AttendeeTotal</td>
                </tr>
            }
            @Html.DisplayForModel()
        </table>
    </div>
</div>
